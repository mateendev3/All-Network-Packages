<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AllNetworkPackages" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cherry_pie</item>
        <item name="colorPrimaryVariant">@color/cherry_pie</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="MainActivityTheme" parent="Theme.AllNetworkPackages">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="ToolBarPopup" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="ZongTheme" parent="Theme.AllNetworkPackages">
        <item name="colorPrimary">@color/zong_green</item>
        <item name="colorPrimaryVariant">@color/zong_pink</item>
    </style>

    <style name="UfoneTheme" parent="Theme.AllNetworkPackages">
        <item name="colorPrimary">@color/ufone_orange</item>
        <item name="colorPrimaryVariant">@color/ufone_green</item>
    </style>

    <style name="TelenorTheme" parent="Theme.AllNetworkPackages">
        <item name="colorPrimary">@color/telenor_light_sky</item>
        <item name="colorPrimaryVariant">@color/telenor_dark_sky</item>
    </style>

    <style name="JazzWaridTheme" parent="Theme.AllNetworkPackages">
        <item name="colorPrimary">@color/jazz_light_red</item>
        <item name="colorPrimaryVariant">@color/jazz_dark_red</item>
    </style>

    <style name="PTCLTheme" parent="Theme.AllNetworkPackages">
        <item name="colorPrimary">@color/ptcl_green_dark</item>
        <item name="colorPrimaryVariant">@color/ptcl_green_light</item>
    </style>

    <style name="Theme.AllNetworkPackages.SplashScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>