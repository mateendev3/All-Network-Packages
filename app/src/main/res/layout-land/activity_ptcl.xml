<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ptcl_green_dark"
    tools:context=".activity.PTCLActivity">

    <ImageView
        android:id="@+id/iv_ptcl_banner"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:scaleType="fitXY"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ptcl_bg" />

    <LinearLayout
        android:id="@+id/ll_open_telephone_packages"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/package_image_bg"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/ll_open_internet_packages"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_ptcl_banner"
        app:layout_constraintVertical_chainStyle="packed">

        <ImageView
            android:id="@+id/iv_btn_telephone"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/offers_buttons_icons_ufone_bg"
            android:backgroundTint="@color/ptcl_green_dark"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_call"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tv_btn_telephone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:text="Telephone Packages"
            android:textColor="@color/ptcl_green_dark"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_open_internet_packages"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/package_image_bg"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/ll_open_smart_tv_packages"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_open_telephone_packages">

        <ImageView
            android:id="@+id/iv_btn_internet"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/offers_buttons_icons_ufone_bg"
            android:backgroundTint="@color/ptcl_green_dark"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_wifi"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tv_btn_internet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:text="Internet Packages"
            android:textColor="@color/ptcl_green_dark"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_open_smart_tv_packages"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/package_image_bg"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_open_internet_packages">

        <ImageView
            android:id="@+id/iv_btn_smart_tv_packages"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/offers_buttons_icons_ufone_bg"
            android:backgroundTint="@color/ptcl_green_dark"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_other_offers"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tv_btn_smart_tv_packages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:text="Smart TV Packages"
            android:textColor="@color/ptcl_green_dark"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>