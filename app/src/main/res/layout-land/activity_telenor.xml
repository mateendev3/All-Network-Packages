<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/telenor_light_sky"
    tools:context=".activity.TelenorActivity">

    <ImageView
        android:id="@+id/iv_telenor_banner"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:scaleType="fitXY"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/telenor_bg" />


    <LinearLayout
        android:id="@+id/ll_open_call_packages"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/package_image_bg"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginVertical="8dp"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/ll_open_internet_packages"
        app:layout_constraintEnd_toStartOf="@+id/gl_center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <ImageView
            android:id="@+id/iv_btn_call"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/offers_buttons_icons_ufone_bg"
            android:backgroundTint="@color/telenor_light_sky"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_call"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tv_btn_call"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:text="Call Offers"
            android:textColor="@color/telenor_light_sky"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_open_sms_packages"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/package_image_bg"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ll_open_call_packages"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/gl_center"
        app:layout_constraintTop_toTopOf="@+id/ll_open_call_packages">

        <ImageView
            android:id="@+id/iv_btn_sms"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/offers_buttons_icons_ufone_bg"
            android:backgroundTint="@color/telenor_light_sky"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_message"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tv_btn_sms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:text="SMS Offers"
            android:textColor="@color/telenor_light_sky"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_open_internet_packages"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/package_image_bg"
        android:clickable="true"
        android:layout_marginVertical="8dp"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/gl_center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_open_call_packages">

        <ImageView
            android:id="@+id/iv_btn_internet"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/offers_buttons_icons_ufone_bg"
            android:backgroundTint="@color/telenor_light_sky"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_wifi"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tv_btn_internet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:text="Internet Offers"
            android:textColor="@color/telenor_light_sky"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_open_other_offers_packages"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/package_image_bg"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ll_open_internet_packages"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/gl_center"
        app:layout_constraintTop_toTopOf="@+id/ll_open_internet_packages">

        <ImageView
            android:id="@+id/iv_btn_other_offers"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/offers_buttons_icons_ufone_bg"
            android:backgroundTint="@color/telenor_light_sky"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_other_offers"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tv_btn_other_offers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:text="Other Offers"
            android:textColor="@color/telenor_light_sky"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>